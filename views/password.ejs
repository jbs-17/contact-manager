<div class="container-lg p-lg-3 mt-3">

  <div class="mb-4 p-3">
    <h1 class="display-6 fw-bold text-primary">
      Change Password Account
    </h1>
    <p class="lead text-muted m-1">
      Edit Your password account
    </p>
    <hr>
    <%- include('./partials/nav-signedin.ejs') %>
      <hr>

      <% if (info.length) { %>
        <div class="alert alert-success" role="alert">
          <strong>Succed to set new password!</strong>
        </div>
        <% } %>
        <% if (error.length) { %>
          <div class="alert alert-danger" role="alert">
            <strong>Failed to set new password!</strong><br>
            <%= error %>
          </div>
        <% } %>

          <form action="?_method=PATCH" method="post" class="form-control d-flex mx-auto my-4 p-3 col-md-12 row shadow-lg">
            <div class="mb-3 col-md-12">
              <label for="" class="form-label fw-bold fs-6">Your Password Now</label>
              <input type="password" class="form-control form-text btn-outline-dark border-dark rounded-0"
                name="password-old" />
            </div>
            <div class="mb-3 col-md-12">
              <label for="" class="form-label fw-bold fs-6">Your New Password</label>
              <input type="password" class="form-control form-text btn-outline-dark border-dark rounded-0"
                name="password-new" />
            </div>
            <div class="mb-3 col-md-12">
              <label for="" class="form-label fw-bold fs-6">Confirm Your New Password</label>
              <input type="password" class="form-control form-text btn-outline-dark border-dark rounded-0"
                name="password-new-confirmation" />
            </div>

            <input type="submit" value="Change My Password Account" class="btn btn-primary col-md-6 mx-auto m-3 p-1">
          </form>