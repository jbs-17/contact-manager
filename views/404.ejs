<div class="container-lg p-lg-3 mt-3">

  <div class="mb-4 p-3">
    <h1 class="display-6 fw-bold text-primary">
      <% path %> Page Not Found
    </h1>
    <p class="lead text-muted m-1">
      Requested Page <strong class="fw-bold">
        <%= path %>
      </strong> not found
    </p>
    <hr>

    <div class="card text-center">
      <div class="card-body p-4 text-center">
        <h2 class="h4 text-danger fw-bold"><span class="fs-1">
          404</span> <br /> <span class="fs-5">Page Not Found
        </span></h2>
      <p class="text-muted">
        Page you are looking for does not exist.
      </p>
      <a href="<%= referer %>" class="btn btn-primary btn-sm mt-3">Back to <strong>
        <%= referer === '/home'
        ? 'HOME PAGE': referer %>
      </strong>
      </a>




    </div>
  </div>


</div>
</div>