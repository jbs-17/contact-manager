<script>
  {
    const navParent = document.getElementById('nav-parent');
    const mobileTemplate = document.getElementById('template-nav-mobile');
    const desktopTemplate = document.getElementById('template-nav-desktop');

    let currentMode = null; // Track current mode to prevent unnecessary re-renders

    function mobileOn() {
      if (currentMode === 'mobile') return; // Prevent re-rendering if already mobile

      navParent.innerHTML = ''; // Clear existing content
      // Clone the template content to avoid consuming the original
      const mobileContent = mobileTemplate.content.cloneNode(true);
      navParent.appendChild(mobileContent);
      currentMode = 'mobile';
    }

    function desktopOn() {
      if (currentMode === 'desktop') return; // Prevent re-rendering if already desktop

      navParent.innerHTML = ''; // Clear existing content
      // Clone the template content to avoid consuming the original
      const desktopContent = desktopTemplate.content.cloneNode(true);
      navParent.appendChild(desktopContent);
      currentMode = 'desktop';
    }

    function handleResize() {
      const screenWidth = window.innerWidth;
      if (screenWidth <= 968) {
        mobileOn();
      } else {
        desktopOn();
      }
    }

    // Add resize event listener
    window.addEventListener('resize', handleResize);

    // Initial load - determine which template to use
    handleResize();

    // Optional: Cleanup function if needed (for SPA or dynamic content)
    window.navCleanup = function () {
      window.removeEventListener('resize', handleResize);
      currentMode = null;
    };
  }
</script>